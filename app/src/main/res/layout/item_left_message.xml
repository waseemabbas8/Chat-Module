<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/views_standard_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/views_standard_margin"
        android:gravity="left">

        <TextView
            android:id="@+id/msg_body"
            android:layout_toLeftOf="@id/time"
            android:layout_toStartOf="@id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_left_message"
            android:text="chat message here" />

        <TextView
            android:id="@+id/time"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/msg_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02:30 PM"
            android:paddingLeft="@dimen/views_standard_margin"
            android:paddingRight="@dimen/views_standard_margin"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

    <View
        android:id="@+id/image_file"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:visibility="gone"/>

</LinearLayout>